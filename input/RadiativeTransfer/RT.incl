 Boundary {
     type = "outflow";
 }

 Domain {
     lower = [ 0.0, 0.0, 0.0 ];
     upper = [ 1.0, 1.0, 1.0 ];
 }

 Field {
     alignment = 8;
     gamma = 1.40;
     ghost_depth = 4;
     list  = [ "photon_density", "flux_x", "flux_y", "flux_z" ];
     list += [ "photon_density_0", "flux_x_0", "flux_y_0", "flux_z_0" ];
     padding = 0;
 }

 Initial {
     list = ["value"];

     value {
     #   photon_density = [ 1.0,
     #                      (x - 0.5)*(x - 0.5) +
     #                      (y - 0.5)*(y - 0.5) + 
     #                      (z - 0.5)*(z - 0.5) <  0.050 ,
     #                    0.0 ];
     #   flux_x         = [ 1.0*3.0E11,
     #                      (x - 0.5)*(x - 0.5) +
     #                      (y - 0.5)*(y - 0.5) + 
     #                      (z - 0.5)*(z - 0.5) <  0.050 ,
     #                    0.0 ];
     
     photon_density_0 = [ 1.0, x < 0.50, 1e-16];
     flux_x_0         = [ 1.0*29979245800.0, x < 0.50, 1e-16];
     flux_y_0         = 1e-16;
     flux_z_0         = 1e-16;
  
     }
 }

 Mesh {
     root_blocks = [ 4, 4, 4 ];
     root_rank = 3;
     root_size = [ 64, 64, 64 ];
 }

Adapt {
   max_level = 0; 
}


 Method {
     list = [ "ramses_rt" ];
     radiation_transport {
         radiation_spectrum = "none";
         N_groups = 1;
         bin_lower = [13.5];
         bin_upper = [13.7];
         flux_function = "GLF";
         clight_frac = 1.0;
     }
 }

 Output {
     list = [ "N", "Fx", "Fy", "Fz"  ];
     N {
         dir = ["PHOTON_WALL_X"];
         field_list = [ "photon_density" ];
         name = [ "RT_N-%04d.png", "cycle" ];
         image_size = [512,512];
         image_log = false;
         schedule {
             step = 20;
             var = "cycle";
         }
         type = "image";
     }
     Fx {
         dir = ["PHOTON_WALL_X"];
         field_list = [ "flux_x" ];
         name = [ "RT_Fx-%04d.png", "cycle" ];
         image_size = [512,512];
         image_log = false;

         schedule {
             step = 20;
             var = "cycle";
         }
         type = "image";
     }
     Fy {
         dir = ["PHOTON_WALL_X"];
         field_list = [ "flux_y" ];
         name = [ "RT_Fy-%04d.png", "cycle" ];
         image_size = [512,512];
         image_log = false;

         schedule {
             step = 20;
             var = "cycle";
         }
         type = "image";
     }
     Fz {
         dir = ["PHOTON_WALL_X"];
         field_list = [ "flux_z" ];
         name = [ "RT_Fz-%04d.png", "cycle" ];
         image_size = [512,512];
         image_log = false;

         schedule {
             step = 20;
             var = "cycle";
         }
         type = "image";
     }
     hdf5 {
     field_list = [ "photon_density", "flux_x", "flux_y", "flux_z" ];
         dir = ["PHOTON_WALL_X"];
         name = [ "data-%03d.h5", "count" ];
         schedule {
             step = 20;
             var = "cycle";
         };
         type = "data";
     };
 }

 Stopping {
     cycle = 200;
 }

